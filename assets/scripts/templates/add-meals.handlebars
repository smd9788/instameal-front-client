<div class="card container">
  <div class="card-body row justify-content-between p-2">
    <div class="card-title col-10 mt-1" data-id="{{orders}}">
      <h4>
        <span class="cart-quantity">{{quantity}}</span>
        <span class="cart-mealName">{{mealName}}</span>
      </h4>
      <div class="cart-price">
        <h4>${{total}}</h4>
        <h6 class="text-muted">${{price}}ea.</h6>
      </div>
    </div>
    <form data-price="{{total}}" data-id="{{orders}}" data-quantity="{{quantity}}" class="col-2">
      <button id="remove-meal-button" type="submit" class="btn btn-danger">Remove</button>
    </form>
  </div>
</div>
