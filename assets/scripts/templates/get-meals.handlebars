{{#each meals as |meal|}}
  {{log meal}}

  <div class='container' id='menu-cards'>
    <div class="card" id="meal-card" style="width: 18rem;">
      <div class="card-body">
        <h4 class="card-title" data-id="{{meal.id}}"> <small>{{meal.name}}</small></h4>
        <section data-id="{{meal.id}}">
          <p>{{meal.price}}</p>
          <button type="submit" class="btn btn-default add-meal">Add to order</button>
        </section>
      </div>
    </div>
  </div>

{{/each}}
